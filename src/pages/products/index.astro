---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BuyButton from '../../components/affiliate/BuyButton.astro';
import { TIER_COLORS } from '../../utils/rarity.ts';
---

<BaseLayout title="Products &mdash; KAYOU Naruto Products Explained" description="Everything you need to know about KAYOU Naruto product types: Booster Boxes, Dimension Zero, EX Rainbow Packs, Blister Packs, and other items.">

  <h1 class="text-4xl sm:text-6xl font-bangers tracking-wider text-white mb-3 text-center">
    KAYOU <span class="text-gradient-orange">Products</span>
  </h1>
  <p class="text-lg text-brand-text-muted max-w-2xl mx-auto text-center mb-12">
    From Booster Boxes to exclusive Gift Boxes, here are all the official KAYOU Naruto products you can collect.
  </p>

  <!-- Booster Boxes -->
  <section class="mb-10">
    <div class="bg-brand-surface rounded-xl border border-brand-border overflow-hidden">
      <div class="bg-gradient-to-r from-brand-surface-light to-brand-surface p-6 border-b border-brand-border">
        <div class="flex items-center gap-3">
          <span class="text-2xl">ðŸ“¦</span>
          <h2 class="text-2xl font-bangers tracking-wider text-white">Booster Boxes</h2>
        </div>
        <p class="text-sm text-brand-text-muted mt-1">The core trading card product lines broken down by Tier and Wave.</p>
      </div>
      <div class="p-6 grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {[
          { tier: 'T1', name: 'Tier 1', waves: 'Wave 1, Wave 2, Wave 3, Wave 4', desc: 'Budget entry point. 30 packs / 1Â¥ each. Mostly common cards with a few holos.', color: TIER_COLORS['T1'] },
          { tier: 'T2', name: 'Tier 2', waves: 'Wave 1, Wave 2, Wave 3, Wave 4, Wave 5, Wave 6', desc: '30 packs / 2Â¥. Best balance of value and variety. Great starting tier.', color: TIER_COLORS['T2'] },
          { tier: 'T2.5', name: 'Tier 2.5', waves: 'Wave 1', desc: 'Special half-tier release focused on exclusive CP hits.', color: TIER_COLORS['T2.5'] },
          { tier: 'T3', name: 'Tier 3', waves: 'Wave 1, Wave 2, Wave 3, Wave 4, Wave 5', desc: '24 packs / 5Â¥. Premium cards with see-through TR/TGR variants.', color: TIER_COLORS['T3'] },
          { tier: 'T4', name: 'Tier 4', waves: 'Wave 1, Wave 2, Wave 3, Wave 4, Wave 5', desc: '18 packs / 10Â¥. Highest hit rate per box. Premium SLR and SE hits.', color: TIER_COLORS['T4'] },
          { tier: 'DZ', name: 'Dimension Zero', waves: 'Wave 1, Wave 2, Wave 3, Wave 4, Wave 5, Wave 6', desc: '(Must use proxy to acquire) - Special alternative premium box series.', color: '#10b981' },
        ].map(t => (
          <div class="bg-brand-bg rounded-lg p-5 border border-brand-border flex flex-col h-full">
            <div class="flex items-center gap-2 mb-2">
              <span class="text-xs font-bold px-2.5 py-1 rounded-full whitespace-nowrap" style={`background: ${t.color}20; color: ${t.color}; border: 1px solid ${t.color}40`}>
                {t.tier}
              </span>
              <span class="text-lg font-bangers text-white">{t.name}</span>
            </div>
            <p class="text-xs font-mono text-brand-gold mb-3">{t.waves}</p>
            <p class="text-sm text-brand-text-muted mt-auto">{t.desc}</p>
          </div>
        ))}
      </div>
      <div class="px-6 pb-6 flex flex-col sm:flex-row items-center gap-4">
        <BuyButton href="https://s.click.aliexpress.com/e/_DkM1Gyl" label="Search Booster Boxes" />
        <a href="/sets" class="text-sm text-brand-orange hover:text-white transition-colors font-semibold">
          Browse all booster box sets â†’
        </a>
      </div>
    </div>
  </section>

  <!-- Other Products -->
  <section class="mb-10">
    <div class="bg-brand-surface rounded-xl border border-brand-border overflow-hidden">
      <div class="bg-gradient-to-r from-orange-500/10 to-brand-surface p-6 border-b border-brand-border">
        <div class="flex items-center gap-3">
          <span class="text-2xl">âœ¨</span>
          <h2 class="text-2xl font-bangers tracking-wider text-white">Other Products</h2>
        </div>
        <p class="text-sm text-brand-text-muted mt-1">Special boxes, accessories, and alternate pack formats.</p>
      </div>
      <div class="p-6">
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
          
          <div class="bg-brand-bg border border-brand-border rounded-lg p-4">
             <h3 class="text-lg font-bangers text-white mb-1">EX Packs</h3>
             <p class="text-xs text-brand-text-muted">Rainbow packs sold loose. The highest hit rate of any KAYOU product with exclusive SPs. SLR cards are pullable here.</p>
          </div>

          <div class="bg-brand-bg border border-brand-border rounded-lg p-4">
             <h3 class="text-lg font-bangers text-white mb-1">Blister Packs</h3>
             <p class="text-xs text-brand-text-muted">Themed blister bundles (Gaara, War, etc.). Includes 4 packs + 1 exclusive promo card. ONLY source of LR cards.</p>
          </div>

          <div class="bg-brand-bg border border-brand-border rounded-lg p-4">
             <h3 class="text-lg font-bangers text-white mb-1">Badge Pin Box</h3>
             <p class="text-xs text-brand-text-muted">Collectible enamel pins in a blind box format, containing exclusive BR (Badge Rare) promo cards.</p>
          </div>

          <div class="bg-brand-bg border border-brand-border rounded-lg p-4">
             <h3 class="text-lg font-bangers text-white mb-1">Youth Scroll Box</h3>
             <p class="text-xs text-brand-text-muted">Special gift box containing exclusive SCR (Scroll Rare) cards of Naruto and Boruto.</p>
          </div>

          <div class="bg-brand-bg border border-brand-border rounded-lg p-4">
             <h3 class="text-lg font-bangers text-white mb-1">Heaven & Earth Scroll Box</h3>
             <p class="text-xs text-brand-text-muted">Premium box containing exclusive SV (Scroll Variant) cards in Gold and Silver, alongside multiple packs.</p>
          </div>

          <div class="bg-brand-bg border border-brand-border rounded-lg p-4">
             <h3 class="text-lg font-bangers text-white mb-1">New Years Gift Box</h3>
             <p class="text-xs text-brand-text-muted">Special holiday-themed commemorative box.</p>
          </div>
          
          <div class="bg-brand-bg border border-brand-border rounded-lg p-4">
             <h3 class="text-lg font-bangers text-white mb-1">20th Anniversary Badge Box</h3>
             <p class="text-xs text-brand-text-muted">Exclusive milestone release highlighting the 20th anniversary.</p>
          </div>

          <div class="bg-brand-bg border border-brand-border rounded-lg p-4">
             <h3 class="text-lg font-bangers text-white mb-1">SL Expansion Boxes</h3>
             <p class="text-xs text-brand-text-muted">Expansion series for Tier 4 boxes focusing on Secret Legend items.</p>
          </div>

          <div class="bg-brand-bg border border-brand-border rounded-lg p-4">
             <h3 class="text-lg font-bangers text-white mb-1">4 and 9 Pocket Binders</h3>
             <p class="text-xs text-brand-text-muted">Official KAYOU-branded binders designed specifically for protecting and displaying your Naruto card collection.</p>
          </div>

        </div>
        
        <div class="mt-6 flex flex-col sm:flex-row items-center gap-4 border-t border-brand-border pt-6">
          <BuyButton href="https://s.click.aliexpress.com/e/_DkM1Gyl" label="Search Special Products" />
        </div>
      </div>
    </div>
  </section>

  <!-- Navigation links -->
  <div class="text-center mt-8 flex flex-wrap justify-center gap-4">
    <a href="/rarity-guide" class="text-sm text-brand-orange hover:text-white transition-colors font-semibold border border-brand-orange/30 px-4 py-2 rounded-lg hover:bg-brand-orange/10">
      ðŸ“– Rarity Guide
    </a>
    <a href="/start-here" class="text-sm text-brand-orange hover:text-white transition-colors font-semibold border border-brand-orange/30 px-4 py-2 rounded-lg hover:bg-brand-orange/10">
      ðŸ†• Start Here Guide
    </a>
    <a href="/sets" class="text-sm text-brand-orange hover:text-white transition-colors font-semibold border border-brand-orange/30 px-4 py-2 rounded-lg hover:bg-brand-orange/10">
      ðŸ“¦ Browse All Sets
    </a>
  </div>

</BaseLayout>
