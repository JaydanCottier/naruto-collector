---
interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;
---

<nav class="text-xs text-brand-text-muted mb-6 font-semibold" aria-label="Breadcrumb">
  {items.map((item, i) => (
    <>
      {i > 0 && <span class="mx-2">&rsaquo;</span>}
      {item.href ? (
        <a href={item.href} class="hover:text-white transition-colors">{item.label}</a>
      ) : (
        <span class="text-white">{item.label}</span>
      )}
    </>
  ))}
</nav>
